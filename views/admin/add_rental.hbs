<form action="/admin/rental_post" method="post" enctype="multipart/form-data">
    <h1 class="p">ADD RENTAL SERVICES</h1>
<div class="rental"><br><br>
    <div class="rent">
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  name="Name"  required placeholder="Name">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  name="Wage" required placeholder="Wage per hour">
  </div>
  <div class="form-group">
    <input type="file" class="form-control"  id=""  name="Image" required placeholder="image">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  name="Category" required placeholder="Category">
  </div>
  <div class="form-group">
    <input type="number" class="form-control"  id=""  required pattern="[0-9]{6}" title="Enter a valid 6-digit pincode" name="Pincode" value="{{data.Pincode}}" name="Pincode" placeholder="pincode" pattern=".{6,}" title="must contain atleast 6 numbers">
  </div>
  <div class="form-check slot">
  <input class="form-check-input" type="checkbox" name="slot1" value="Mon" id="flexCheckDefault">Mon&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="checkbox" name="slot2" value="Tue" id="flexCheckDefault">Tue&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="checkbox" name="slot3" value="Wed" id="flexCheckDefault">Wed&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="checkbox" name="slot4" value="Thu" id="flexCheckDefault">Thur&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="checkbox" name="slot5" value="Fri" id="flexCheckDefault">Fry&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <input class="form-check-input" type="checkbox" name="slot6" value="Sat" id="flexCheckDefault">Fry&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <input class="form-check-input" type="checkbox" name="slot7" value="Sun" id="flexCheckDefault">Sat<br>
</div>
  <div class="form-group">
  <button type="submit" class="submit">Add</button>
  </div>
  
  </div>
</div>
</form>