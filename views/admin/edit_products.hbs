<form action="/admin/edit_post/{{data._id}}" method="post" enctype="multipart/form-data">
    <h1 class="p">EDIT PRODUCTS</h1>
<div class="rental"><br><br>
    <div class="rent">
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required name="Name"  value="{{data.Name}}">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required name="Price" value="{{data.Price}}">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required name="Category" value="{{data.Category}}">
  </div>
  <div class="form-group">
    <input type="file" class="form-control"  id=""  name="Image" placeholder="image">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required pattern="[0-9]{6}" title="Enter a valid 6-digit pincode" name="Pincode" value="{{data.Pincode}}"  name="Pincode" value="{{data.Pincode}}">
  </div>
  
  <div class="form-group">
  <button type="submit" class="submit">Edit</button>
  </div>
  
  </div>
</div>
</form>