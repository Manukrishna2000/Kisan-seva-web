    <input type="file" class="form-control" id="" aria-describedby="emailHelp" name="Image" >
  </div>
  <div class="form-group">
    <input type="text" class="form-control" id="" aria-describedby="emailHelp" name="Category" value="{{data.Category}}">
  </div>
  <div class="form-group">
    <input type="number" class="form-control" id="" aria-describedby="emailHelp" required pattern="[0-9]{6}" title="Enter a valid 6-digit pincode" name="Pincode" value="{{data.Pincode}}" name="Pincode" value="{{data.Pincode}}">
