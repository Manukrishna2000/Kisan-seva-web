<div class="customerhome">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<section id="sidebar">
           <a href="/user" class="a"> <h6 class="p-1 border-bottom">Filter</h6> </a><br>
    <div>
        <h6 class="p-1 border-bottom">Category</h6>
        <ul>{{#each data}}
            <li><a href="/user/category/{{this._id}}">{{this.Category}}</a></li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h6 class="p-1 border-bottom">Filter By</h6>
        <p class="mb-2">Pincode</p>
