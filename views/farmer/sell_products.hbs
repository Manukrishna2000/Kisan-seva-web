<form action="/farmer/farm_product_post" method="post" enctype="multipart/form-data">
    <h1 class="f_head">ADD PRODUCTS</h1>
<div class="farmform"><br><br>
    <div class="rent">
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required name="Name" placeholder="Name">
  </div>
  <div class="form-group">
    <input type="number" required  class="form-control"  id=""  required name="Price" placeholder="Price">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control"  id=""  required name="Category" placeholder="Category">
  </div>
  <div class="form-group">
    <input type="file" class="form-control"  id=""  required name="Image" placeholder="image">
  </div>
  <div class="form-group">
    <input type="number" class="form-control"  id=""  required name="Stock" placeholder="stock">
  </div>
  <div class="form-group">
    <input type="number" class="form-control"  id=""  required pattern="[0-9]{6}" title="Enter a valid 6-digit pincode" name="Pincode" value="{{data.Pincode}}" name="Pincode" placeholder="pincode">
  </div>
   <div class="form-group">
    <input type="text" required  class="form-control"  id=""  name="user_id" value="{{data}}" hidden>
  </div>
  <div class="form-group">
  <button type="submit" class="submit">Add</button>
  </div>
  
  </div>
</div>
</form>
