<form action="/farmer/work_request_post" method="post"> 
    <h1 class="f_head">WORK REQUEST</h1>
<div class="farmform"><br><br>
    <div class="rent">
  <div class="form-group">
    <input type="text" required  class="form-control" id="" name="Type" aria-describedby="emailHelp"required placeholder="work type">
  </div>
  <div class="form-group">
    <input type="date" class="form-control" id="datepicker1"  name="Date" aria-describedby="emailHelp"  required placeholder="Date">
  </div>
  <div class="form-group">
    <input type="textarea" class="form-control" name="Address"  id=""  required placeholder="Address">
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control" id="" name="Pincode" aria-describedby="emailHelp" required pattern="[0-9]{6}" title="Enter a valid 6-digit pincode" name="Pincode" value="{{data.Pincode}}" placeholder="pincode" pattern=".{6,}" title="must contain atleast 6 numbers">
  </div>
  <div class="form-group">
    <input type="tel" class="form-control" name="Contact"  id=""  required placeholder="Contact" pattern="[0-9]{10}" title="enter valid number">
  </div>
   <div class="form-group">
    {{!-- <input type="number" class="form-control" name="Worker_Nos"  id=""  required placeholder="Number of Workers"> --}}
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control" name="status"  id=""  value="pending" hidden>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control" name="user_id"  id=""  value="{{data}}" hidden>
  </div>
 
  <div class="form-group">
  <button type="submit" class="submit">Add</button>
  </div>
  
  </div>
</div>
</form>
<script>
	datepicker1.min=new Date().toISOString().split("T")[0];
</script>