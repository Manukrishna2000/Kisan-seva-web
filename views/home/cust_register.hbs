
<form action="/customer_register_post" method="post">
    <h1 class="p">CUSTOMER REGISTER</h1>
<div class="register"><br><br>
    <div class="rent">
  <div class="form-group">
    {{#if err}}
    {{err}}
    {{/if}}
    <input type="text" required  class="form-control reg"  id=""  name="Full_Name" placeholder="Full Name" required><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Contact" placeholder="Contact" pattern="[0-9]{10}" required><br>
  </div>
  <div class="form-group">
    <input type="number" class="form-control reg" id="" aria-describedby="pincode" name="Pincode" placeholder="pincode" pattern=".{6,}" title="must contain atleast 6 numbers" pattern=".{6,}" title="must contain atleast 6 numbers" required><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Username" placeholder="Create username" required><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Password" placeholder="Create Password" pattern=".{8,}" title="must contain atleast 8characters" required><br> 
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="type" value="customer" hidden><br> 
  </div>
  <div class="form-group">
  <button type="submit" class="button3">Register</button>
  </div>
  
  </div>
</div>
</form>
