<form action="worker_register_post" method="post"  enctype="multipart/form-data">
    <h1 class="p">WORKER REGISTER</h1>
<div class="register"><br><br>
    <div class="rent">
  <div class="form-group">
    {{#if err}}
    {{err}}
    {{/if}}
    <input type="text" required  class="form-control reg"  id=""  name="Full_Name" placeholder="Full Name"><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Contact" placeholder="Contact" pattern="[0-9]{10}"><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Pincode" placeholder="pincode" pattern=".{6,}" title="must contain atleast 6 numbers"><br>
  </div>
  <div class="form-group">
    <input type="file" class="form-control reg"  id=""  name="Photos" placeholder="Photo"><br>
  </div>
   <div class="form-group">
    <input type="file" class="form-control reg"  id=""  name="Id_proofs" placeholder="Id proof"><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Username" placeholder="Create username"><br>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="Password" placeholder="Create Password" pattern=".{8,}" title="must contain atleast 8characters" required><br> 
  </div>
  <div class="form-group">
  <button type="submit" class="button3">Register</button>
  </div>
  <div class="form-group">
    <input type="text" required  class="form-control reg"  id=""  name="type" value="worker" hidden><br> 
  </div>
  
  </div>
</div>
</form>